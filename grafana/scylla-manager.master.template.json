{
    "dashboard": {
        "class": "dashboard",
        "originalTitle": "Scylla Manager Metrics",
        "rows": [
            {
                "class": "logo_row",
                "panels": [
                    {
                        "class": "text_panel",
                        "content": "<img src=\"http://www.scylladb.com/wp-content/uploads/logo-scylla-white-simple.png\" height=\"70\">&nbsp;<span style=\"font-weight:bold; font-size:40px\">Manager</span>&nbsp;<span style=\"font-size:40px\"> [[cluster]]</span>\n<hr style=\"border-top: 3px solid #5780c1;\">"
                    }
                ]
            },
            {
                "class": "row",
                "height": "150px",
                "panels": [
                    {
                        "class": "single_stat_panel",
                        "span": 3,
                        "targets": [
                            {
                                "expr": "count(scrape_samples_scraped{job=\"scylla_manager\"}==0) OR vector(0)",
                                "intervalFactor": 1,
                                "refId": "A",
                                "step": 40
                            }
                        ],
                        "valueFontSize": "80%",
                         "valueMaps": [
                        {
                          "op": "=",
                          "text": "Scylla Manager</br>Not Reachable",
                          "value": "1"
                        },
                        {
                          "op": "=",
                          "text": "Scylla Manager</br>Connected",
                          "value": "0"
                        }]
                    },
                    {
                        "class": "single_stat_panel",
                        "targets": [
                            {
                                "expr": "sum(scylla_manager_task_active_count) or vector(0)",
                                "intervalFactor": 1,
                                "refId": "A",
                                "step": 40
                            }
                        ],
                        "title": "Active Repair Tasks"
                    },
                    {
                        "class": "single_stat_panel",
                        "span": 1,
                        "thresholds": "0,0",
                        "gauge": {
                            "maxValue": 100,
                            "minValue": 0,
                            "show": true,
                            "thresholdLabels": false,
                            "thresholdMarkers": false
                          },
                         "targets": [
                            {
                              "expr": "scylla_manager_repair_progress{cluster=\"[[cluster]]\", host=\"\"}",
                              "format": "time_series",
                              "intervalFactor": 2,
                              "refId": "A"
                            }
                          ],
                          "title": "Repair progress"
                    }
                ],
                "title": "Statistic Row"
            },
            {
                "class": "row",
                "panels": [
                    {
                        "class": "ops_panel",
                        "targets": [
                            {
                                "expr": "sum(irate(scylla_manager_repair_segments_success{cluster=\"[[cluster]]\"}[30s])) by ([[by]])",
                                "intervalFactor": 1,
                                "refId": "A",
                                "step": 4
                            }
                        ],
                        "title": "Repair Segments Rate"
                    },
                    {
                        "class": "ops_panel",
                        "targets": [
                            {
                                "expr": "sum(irate(scylla_manager_repair_segments_error{cluster=\"[[cluster]]\"}[30s])) by ([[by]])",
                                "intervalFactor": 1,
                                "refId": "A",
                                "step": 4
                            }
                        ],
                        "title": "Repair Segments Error Rate"
                    }],
                "title": "Statistic Row"
            }
        ],
        "templating": {
            "list": [
                {
                    "allValue": null,
                    "current": {
                        "tags": [],
                        "text": "Cluster",
                        "value": "cluster"
                    },
                    "hide": 0,
                    "includeAll": false,
                    "label": "by",
                    "multi": false,
                    "name": "by",
                    "options": [
                        {
                            "selected": true,
                            "text": "Cluster",
                            "value": "cluster"
                        },
                        {
                            "selected": false,
                            "text": "Host",
                            "value": "host"
                        },
                        {
                            "selected": false,
                            "text": "Keyspace",
                            "value": "unit"
                        },
                        {
                            "selected": false,
                            "text": "Shard",
                            "value": "shard"
                        }
                    ],
                    "query": "Instance,Shard,Cluster",
                    "type": "custom"
                },
                {
                    "allValue": null,
                    "current": {},
                    "datasource": "prometheus",
                    "hide": 0,
                    "includeAll": false,
                    "label": "cluster",
                    "multi": false,
                    "name": "cluster",
                    "options": [],
                    "query": "scylla_manager_repair_segments_total",
                    "refresh": 2,
                    "regex": "/cluster=\"([a-zA-Z0-9\\-\\.=]*)\".*/",
                    "sort": 0,
                    "tagValuesQuery": "",
                    "tags": [],
                    "tagsQuery": "",
                    "type": "query",
                    "useTags": false
                },
                {
                    "allValue": null,
                    "current": {
                        "text": "All",
                        "value": [
                            "$__all"
                        ]
                    },
                    "datasource": "prometheus",
                    "hide": 0,
                    "includeAll": true,
                    "label": "host",
                    "multi": true,
                    "name": "host",
                    "options": [],
                    "query": "scylla_manager_repair_segments_total",
                    "refresh": 2,
                    "regex": "/host=\"([a-zA-Z0-9\\-\\.]*)\".*/",
                    "sort": 0,
                    "tagValuesQuery": "",
                    "tags": [],
                    "tagsQuery": "",
                    "type": "query",
                    "useTags": false
                },
                {
                    "allValue": null,
                    "current": {
                        "text": "All",
                        "value": "$__all"
                    },
                    "datasource": "prometheus",
                    "hide": 0,
                    "includeAll": true,
                    "label": "keyspace",
                    "multi": true,
                    "name": "keyspace",
                    "options": [],
                    "query": "scylla_manager_repair_segments_total{host=~\"$host\"}",
                    "refresh": 2,
                    "regex": "/unit=\"(.*)\".*/",
                    "sort": 1,
                    "tagValuesQuery": "",
                    "tags": [],
                    "tagsQuery": "",
                    "type": "query",
                    "useTags": false
                },
                {
                    "allValue": null,
                    "current": {
                        "text": "All",
                        "value": "$__all"
                    },
                    "datasource": "prometheus",
                    "hide": 0,
                    "includeAll": true,
                    "label": "shard",
                    "multi": true,
                    "name": "shard",
                    "options": [],
                    "query": "scylla_manager_repair_segments_total{host=~\"$host\"}",
                    "refresh": 2,
                    "regex": "/shard=\"([0-9]*)\".*/",
                    "sort": 3,
                    "tagValuesQuery": "",
                    "tags": [],
                    "tagsQuery": "",
                    "type": "query",
                    "useTags": false
                }
            ]
        },
		"tags": [
			"master"
		],
        "time": {
            "from": "now-30m",
            "to": "now"
        },
        "title": "Scylla Manager Metrics master",
        "version": 3
    }
}
